<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:minWidth="330dp"
    android:orientation="vertical"
    tools:context=".PesquisaDialog">

    <EditText
        android:id="@+id/conteudoPesquisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Pesquisar..." />

    <Button
        android:id="@+id/refinarPesquisa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:text="Filtrar Pesquisa"
        android:textColor="@color/textColorPrimary" />

    <CheckBox
        android:id="@+id/checkTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Pesquisar por Título de Dúvidas" />

    <CheckBox
        android:id="@+id/checkConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Pesquisar por Conteúdo de Dúvidas" />

    <CheckBox
        android:id="@+id/checkMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Pesquisar por Matérias" />

    <CheckBox
        android:id="@+id/checkTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:checked="true"
        android:text="Pesquisar por Palavras-chave" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelaPesquisa"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:text="Cancelar"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/novaPesquisa"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:text="Pesquisar"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


</LinearLayout>